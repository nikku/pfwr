{
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es2019"
    ],
    "target": "es2019",
    "allowJs": true,
    "checkJs": true,
    "rootDir": ".",
    "strict": false,
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [
    "src",
    "bin"
  ]
}